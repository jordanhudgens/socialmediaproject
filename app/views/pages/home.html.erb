<html lang="en">
  <head>
    <title> Social Network HTML/CSS </title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="vendor/bootstrap-3.3.7-dist/css/bootstrap-theme.min.css" rel="stylesheet">
  
  </head>

  <body>
    <div class="grey2"></div>
    <div id="header">
      <div class="container">
        <div class="row">
          <div class="grey"> </div>
          
          <a class="col-xs-3 logo pull-left" href="#"> 
            <%= image_tag "common/logo.png"%>
            <%= image_tag "common/logo_small.png"%>
          </a>

          <div class="col-xs-9 pull-left">
          	<div class="col-xs-6 pull-left">
          		<span class="icon icon-search"> </span>
          		<input type="text" placeholder="Search...">
          	</div>

          	<div class="col-xs-3 avatar pull-right">
          		<a href="#">
          			<div class="mask"> </div>
          			<%= image_tag "common/guest_image.png"%>
          		</a>
          		<strong> Welcome Guest! </strong>
          		<a href="#">Login</a> or 
          		<a href="#">Register</a>
          	</div>
          </div>
         <div class="clearfix"></div>
        </div>
      </div>
    </div>

    <div id="main-menu" class="small">
    	<div class="container">
    		<div class="row">
    		</div>
    	</div>
    </div>

  </body>

</html>